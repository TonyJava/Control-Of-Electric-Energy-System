<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/btn_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/btn_admins"
            android:layout_gravity="right"
            android:onClick="btn_admin"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:onClick="MoveToNotice"
                android:src="@drawable/btn_notice"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView android:id="@+id/btn_soon_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_01"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_02"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_03"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView android:id="@+id/btn_soon_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_04"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_05"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_06"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView android:id="@+id/btn_soon_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_07"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_08"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

            <ImageView android:id="@+id/btn_soon_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_soon_12"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="MoveToRoom"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
    </LinearLayout>
</LinearLayout>